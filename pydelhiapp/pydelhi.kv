            TabbedPanelItem
                id: tab_maps
                text: 'Location'
                StencilView
                    id: stencil_maps
                    Image:
                        on_touch_down:
                            if args[1].is_double_tap: Animation(center = stencil_maps.center).start(sctr_map)
                        size: stencil_maps.size
                        allow_stretch: True
                        source: 'data/center.jpg'
                    Scatter:
                        id: sctr_map
                        size_hint: None, None
                        size: map_img.size
                        on_touch_down:
                            if args[1].is_double_tap: Animation(scale = 1 if sctr_map.scale >2 else 10).start(sctr_map)
                        Image
                            id: map_img
                            canvas.before:
                                Color:
                                    rgba: active_text_color[0], active_text_color[1], active_text_color[2], .3
                                Rectangle:
                                    size: self.size
                            size: dp(200), dp(200)
                            allow_stretch: True
                            source: 'data/conference-map.png'
                    PyDelButton:
                        text: 'Open Map'
                        pos: stencil_maps.right - self.width - dp(10), dp(10)
                        size: dp(100), dp(40)
                        default: True
                        on_release:
                            webbrowser.open('https://www.google.co.in/maps/place/Convention+Center/@28.5418632,77.1636535,16z/data=!4m5!1m2!2m1!1sJNU+Convention+center!3m1!1s0x390d1ddb55725eaf:0xdf1d45bdd082aedf?hl=en')

            TabbedPanelItem
                id: tab_sponsors
                text: 'Sponsors'
                BoxLayout
                    padding: dp(4)
                    orientation: 'vertical'
                    spacing: dp(4)
                    Image
                        source: 'data/fossee.png'
                        allow_strech: True
                        size_hint: 1, .5
                    GridLayout
                        cols: 2
                        rows: 2
                        spacing: dp(4)
                        #Image
                        #Image
                        #Image
                        #Image
                    PyDelButton
                        text: 'Sponsor Us'
                        default: True
                        size_hint_y: None
                        height: dp(40)
                        on_release: webbrowser.open('https://conference.pydelhi.org/data/SponsorshipProspectus2016.pdf')
                    PyDelButton
                        text: 'Contact Us'
                        size_hint_y: None
                        height: dp(40)
                        on_release: webbrowser.open('mailto:sponsorship@pydelhi.org')

            TabbedPanelItem
                id: tickets
                text: 'Tickets'
                RelativeLayout
                    BoxLayout
                        spacing: dp(12)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: None, None
                        size: dp(300), dp(200)
                        orientation: 'vertical'
                        PyDelButton
                            id: my_ticket
                            text: 'My tickets'
                            on_release:
                                webbrowser.open('https://in.explara.com/e/pydelhi-conference/')
                        PyDelButton
                            default: True
                            text: 'Buy tickets'
                            on_release:
                                my_ticket.trigger_action()

            TabbedPanelItem
                id: tab_maps
                text: 'About'
                BoxLayout
                    padding: dp(4)
                    spacing: dp(4)
                    orientation: 'vertical'
                    LeftAlignedLabel:
                        padding: dp(12), dp(12)
                        markup: True
                        text: app.about_text
                        on_ref_press: webbrowser.open('http://pydelhi.org')
                    Widget
                    PyDelButton
                        default: True
                        text: 'History'
                        size_hint:1, None
                        height: dp(40)
                        on_release:
                            webbrowser.open('http://www.meetup.com/pydelhi/events/past/?scroll=true')

