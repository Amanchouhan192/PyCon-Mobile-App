<LeftAlignedLabel@Label>
    padding: dp(12), dp(12)
    text_size: self.size
    valign: 'middle'
    halign: 'left'
	
<MicImg@Widget>
	canvas:
		Ellipse:
			source: 'data/mic.jpg'
			pos:self.pos 
			size:self.size
<EventItem@BoxLayout>
	spkr_detail: 'Dummy Speaker'
	title: 'Dummy Title'
	time: '9:00 - 10:00'
	size_hint: 1, None
	
	MicImg	
		size_hint_x: None
		width: dp(100)
	BoxLayout
		
		height: dp(100)
		canvas.before:
			Color:
				rgba: 39./256., 115./256., 90./256., 1
			Rectangle:
				pos: self.pos
				size: self.size
		orientation: 'vertical'
		LeftAlignedLabel:
			text: root.time
		LeftAlignedLabel:
			text: root.title
		LeftAlignedLabel:
			text: root.spkr_detail

<TabbedPanelItem>
    color: (59./256., 205./256., 155./256., 1) if self.state == 'down' else (1, 1, 1, 1)
    background_color:62./256., 70./256., 81./256., 1

    background_normal:''
    background_down: ''

ScreenManager
