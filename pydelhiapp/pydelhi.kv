#:import Animation kivy.animation.Animation
#:import webbrowser webbrowser
#:set active_text_color 59./256., 205./256., 155./256., 1
#:set background_color 62./256., 70./256., 81./256., 1

<GridH@GridLayout>
    cols: 1
    size_hint: 1, None
    height: self.minimum_height
    padding: [5,5,7,5]

<EventItemDetail@Popup>
    separator_color: active_text_color
    links: ''
    speaker_name: ''
    description: ''
    GridH:
        LeftAlignedLabel
            text: root.links
        LeftAlignedLabel
        LeftAlignedLabel
        LeftAlignedLabel


<LeftAlignedLabel@Label>
    padding: dp(12), dp(4)
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    valign: 'middle'
    halign: 'left'

<RightAlignedLabel@LeftAlignedLabel>
    halign: 'right'

<EventItem@GridH>
    spkr_detail: 'Dummy Speaker'
    title: 'Dummy Title'
    time: '9:00 - 10:00'
    orientation: 'vertical'
    padding: [0,4,0,4]
    canvas.before:
        Color:
            rgba: 39./256., 115./256., 90./256., 1
        Rectangle:
            pos: self.pos
            size: self.size
    RightAlignedLabel:
        text: root.time
        font_size: '12dp'
    LeftAlignedLabel:
        text: root.title
    LeftAlignedLabel:
        text: root.spkr_detail

<TabbedPanelHeader>
    color: active_text_color if self.state == 'down' else (1, 1, 1, 1)
    background_color: background_color
    size_hint_x: None
    width: (self.texture_size[0] + dp(12)) if self.texture else dp(100)
    background_normal: ''
    background_down: ''
    alpha: 0
    on_state:
        Animation.cancel_all(self)
        Animation(alpha = 1 if self.state == 'down' else 0).start(self)
    canvas.after:
        Color:
            rgba: 1, 1, 1, self.alpha
        BorderImage:
            border: 4, 4, 4, 4
            display_border: dp(1), dp(1), dp(1), dp(1)
            source: 'data/but_overlay.png'
            size: self.size
            pos: self.pos

<PyDelButton@Button>
    default: False
    background_normal: 'data/but_{}.png'.format('light' if self.default else 'drk')
    background_down: 'data/but_{}.png'.format('drk' if self.default else 'light')


BoxLayout:
    canvas.before:
        Color:
            rgba: background_color
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    ActionBar
        background_image: ''
        background_color: 1, 1, 1, .1
        ActionView
            ActionPrevious
                with_previous: False
                app_icon: 'data/logo.png'
            ActionButton
                text: app.time_left
    Screen
        TabbedPanel:
            do_default_tab: False
            tab_width: None
            TabbedPanelItem:
                id: tab_schedule
                text: 'Schedule'
                TabbedPanel
                    id: panel_schedule
                    tab_pos: 'left_top'
                    do_default_tab: False
                    canvas.before:
