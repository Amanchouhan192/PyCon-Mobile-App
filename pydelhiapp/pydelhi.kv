#:set active_text_color 59./256., 205./256., 155./256., 1

<GridH@GridLayout>
    size_hint: 1, None
    height: self.minimum_height

<EventItemDetail@Popup>
    separator_color: active_text_color
    links: ''
    speaker_name: ''
    description: ''
    GridH:
        LeftAlignedLabel
            text: root.links
        LeftAlignedLabel
        LeftAlignedLabel
        LeftAlignedLabel


<LeftAlignedLabel@Label>
    padding: dp(12), dp(12)
    text_size: self.size
    valign: 'middle'
    halign: 'left'

<EventItem@BoxLayout>
    spkr_detail: 'Dummy Speaker'
    title: 'Dummy Title'
    time: '9:00 - 10:00'
    size_hint: 1, None
    height: dp(100)
    canvas.before:
        Color:
            rgba: 39./256., 115./256., 90./256., 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    LeftAlignedLabel:
        text: root.time
    LeftAlignedLabel:
        text: root.title
    LeftAlignedLabel:
        text: root.spkr_detail

<TabbedPanelItem>
    color: active_text_color if self.state == 'down' else (1, 1, 1, 1)
    background_color:62./256., 70./256., 81./256., 1

    background_normal:''
    background_down: ''

ScreenManager
    Screen
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                id: tab_schedule
                text: 'Schedule'
                TabbedPanel
                    id: panel_schedule
                    tab_pos: 'left_top'
                    default_tab: tab_audi_3
                    TabbedPanelItem
                        id: tab_audi_3
                        text: "Audi 3"
                        ScrollView
                            GridLayout
                                cols: 1
                                spacing: dp(3)
                                size_hint: 1, None
                                height: self.minimum_height
                                EventItem
                                    title: 'Keynote'
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                    TabbedPanelItem
                        text: "Lecture Hall 1"

                        ScrollView
                            GridLayout
                                cols: 1
                                spacing: dp(3)
                                size_hint: 1, None
                                height: self.minimum_height
                                EventItem
                                    title: 'Keynote'
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                    TabbedPanelItem
                        text: "Lecture Hall 2"

                        ScrollView
                            GridLayout
                                cols: 1
                                spacing: dp(3)
                                size_hint: 1, None
                                height: self.minimum_height
                                EventItem
                                    title: 'Keynote'
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
                                EventItem
            TabbedPanelItem
                id: tab_maps
                text: 'Location'
                StencilView
                    id: stencil_maps
                    Image:
                        size: stencil_maps.size
                        allow_stretch: True
                        source: 'data/center.jpg'
                    Scatter:
                        size_hint: None, None
                        size: map_img.size
                        Image
                            id: map_img
                            size: dp(200), dp(200)
                            allow_stretch: True
                            source: 'data/conference-map.png'
            TabbedPanelItem
                id: tab_maps
                text: 'About'
                Label:
                    padding: dp(12), dp(12)
                    text_size: self.size
                    valign: 'top'
                    halign: 'justify'
                    markup: True
                    text: app.about_text
    
